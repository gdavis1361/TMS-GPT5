{
  "name": "tms-modern",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "npm run build -w @tms/types && npm run build -w @tms/config && npm run build -w @tms/ui && npm run build -w @tms/api && npm run build -w @tms/web",
    "typecheck": "npm run -w @tms/types typecheck && npm run -w @tms/config typecheck && npm run -w @tms/ui typecheck && npm run -w @tms/api typecheck && npm run -w @tms/web typecheck",
    "lint": "eslint . --ext .ts,.tsx,.js,.cjs --max-warnings=0",
    "format": "prettier --write .",
    "prepare": "husky install",
    "commitlint": "commitlint --from=origin/main --to=HEAD",
    "test": "echo \"No tests yet (placeholder)\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "7.18.0",
    "@typescript-eslint/parser": "7.18.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jsx-a11y": "6.9.0",
    "eslint-plugin-react": "7.35.0",
    "eslint-plugin-react-hooks": "4.6.2",
    "eslint-plugin-tailwindcss": "3.17.5",
    "husky": "9.1.6",
    "lint-staged": "15.2.7",
    "prettier": "3.3.3",
    "@commitlint/cli": "19.4.0",
    "@commitlint/config-conventional": "19.2.2"
  },
  "packageManager": "npm@10"
}
